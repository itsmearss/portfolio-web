  </div>

  <HorizontalCard
    title="RempahTour Website"
    img="/project/6.png"
    desc="Website Virtual Tour Jejak Rempah Nusantara"
    url="https://jejakrempah.com/"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="ArsProperty Website"
    img="/project/3.png"
    desc="Home marketing website with Decision Support System feature"
    url="https://github.com/itsmearss/SPK-SAW_Laravel9"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Website UMKM Desa Selapura"
    img="/project/4.png"
    desc="Website for promotion of MSME products"
    url="https://umkmselapura.com/"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Tegal Tourism Website"
    img="/project/5.png"
    desc="Virtual tour website for tourism promotion"
    url="https://tegaltourism.com/"
  />

